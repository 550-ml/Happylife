<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="top"
    android:background="@drawable/mountain_1"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btbg_3"
            android:gravity="center"
            android:text="饮食运动提醒助手"
            android:textColor="#FFFFFF"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/btn_main_2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btbg_gray"
            android:gravity="center"
            android:text="养生与健康"
            android:textColor="#FFFFFF"
            android:textSize="40sp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_5"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btbg_4"
            android:gravity="center"
            android:text="附近的人/社区"
            android:textColor="#FFFFFF"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/btn_main_6"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btbg_3"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="#FFFFFF"
            android:textSize="40sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btbg_red"
            android:gravity="center"
            android:text="紧急呼救"
            android:textColor="#FFFFFF"
            android:textSize="40sp"

            />



    </LinearLayout>

</LinearLayout>